{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"outDir": "dist",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": true
	},
	"exclude": ["dist/**/*"],
	"include": ["src/**/*"]
}
